<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="20" vgap="20">
    <padding><Insets top="10" left="10"/></padding>


    <Text text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Text text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Text text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Text text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Text text="Phone #:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Text text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField id="userNameField" promptText="Username" fx:id="userNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <PasswordField id="passwordField" fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField id="nameField" promptText="Jone Doe" fx:id="nameField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField id="emailField" promptText="abc@abc.com" fx:id="emailField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField id="phoneField"  promptText="Phone #" fx:id="phoneField"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <DatePicker id="datePicker" fx:id="datePicker"
                GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button id="registerButton" fx:id="registerButton1" onAction="#btnOnPress" text="Register"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>